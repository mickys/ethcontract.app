    const chains = [window.wagmi.chains.arbitrum, window.wagmi.chains.mainnet, window.wagmi.chains.polygon];

    // Wagmi Core Client
    const { provider } = window.wagmi.configureChains(chains, [
        window.w3m.walletConnectProvider({ projectId: "30c64d8ec46ca4e39864b78271437d20" }),
    ]);

    console.log(provider)

    const wagmiClient = window.wagmi.createClient({
        autoConnect: true,
        connectors: window.w3m.modalConnectors({ appName: "web3Modal", chains }),
        provider,
    });

    //- // Web3Modal and Ethereum Client
    const ethereumClient = new window.w3m.EthereumClient(wagmiClient, chains);
    const web3modal = new window.w3m.Web3Modal(
        { projectId: "30c64d8ec46ca4e39864b78271437d20" },
        ethereumClient
    );

